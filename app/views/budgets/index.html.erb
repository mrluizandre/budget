<h1>Budgets</h1>
<%= link_to 'New Budget', new_budget_path, class: 'btn btn-primary' %>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>User</th>
      <th>Name</th>
      <th>Last used at</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @budgets.each do |budget| %>
      <tr>
        <td><%= budget.user.email %></td>
        <td><%= budget.name %></td>
        <td><%= budget.last_used_at %></td>
        <td>
          <div class="btn-group btn-group-sm">
            <%= link_to 'Set current', set_current_budget_path(budget), class: 'btn btn-outline-success' %>
            <%= link_to 'Show', budget, class: 'btn btn-outline-secondary' %>
            <%= link_to 'Edit', edit_budget_path(budget), class: 'btn btn-outline-secondary' %>
            <%= link_to 'Destroy', budget, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-danger' %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

