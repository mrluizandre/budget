
<%= simple_form_for(@transfer) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
  
  <div class="form-inputs">
    <div class="row">
      <%= f.association :account_from, collection: Account.order(name: :asc), wrapper_html: { class: 'col-12 col-sm-3'} %>
      <%= f.association :account_to, collection: Account.order(name: :asc), selected: @transfer.persisted? ? @transfer.account_to_id : params[:account_to_id], wrapper_html: { class: 'col-12 col-sm-3'} %>
      <%= f.input :amount, as: :string, input_html: {value: @transfer.persisted? ? @transfer.amount : params[:value]}, wrapper_html: { class: 'col-12 col-sm-3'} %>
      <%= f.input :note, wrapper_html: { class: 'col-12 col-sm-3'} %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-outline-primary' %>
  </div>
<% end %>
