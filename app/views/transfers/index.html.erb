<h1>Transfers</h1>
<%= link_to 'New Transfer', new_transfer_path, class: 'btn btn-outline-primary' %>

<table class="table table-bordered table-sm">
  <thead>
    <tr>
      <th>From</th>
      <th>To</th>
      <th>Note</th>
      <th>Amount</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @transfers.each do |transfer| %>
      <tr>
        <td><%= transfer.account_from.name %></td>
        <td><%= transfer.account_to.name %></td>
        <td><%= transfer.note %></td>
        <td><%= number_to_currency transfer.amount %></td>
        <td>
          <div class="btn-group btn-group-sm">
            <%= link_to 'Show', transfer, class: 'btn btn-outline-secondary' %>
            <%= link_to 'Destroy', transfer, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-danger' %>
          </td>
        </div>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

