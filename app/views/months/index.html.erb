<h1>Months</h1>

<table class="table table-bordered table-sm">
  <thead>
    <tr>
      <th>Month</th>
      <th>Income</th>
      <th>Budgeted</th>
      <th>Activity</th>
      <th>To be budgeted</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @months.each do |month| %>
      <tr>
        <td><%= month.month %></td>
        <td><%= month.income %></td>
        <td><%= month.budgeted %></td>
        <td><%= month.activity %></td>
        <td><%= month.to_be_budgeted %></td>
        <td>
          <div class="btn-group btn-group-sm float-right">
            <%= link_to 'Show', month, class: 'btn btn-outline-secondary' %>
            <%= link_to 'Edit', edit_month_path(month), class: 'btn btn-outline-secondary' %>
            <%= link_to 'Destroy', month, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-danger' %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Month', new_month_path, class: 'btn btn-outline-primary' %>
