<p id="notice"><%= notice %></p>

<h1>Months</h1>

<table>
  <thead>
    <tr>
      <th>Month</th>
      <th>Income</th>
      <th>Budgeted</th>
      <th>Activity</th>
      <th>To be budgeted</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @months.each do |month| %>
      <tr>
        <td><%= month.month %></td>
        <td><%= month.income %></td>
        <td><%= month.budgeted %></td>
        <td><%= month.activity %></td>
        <td><%= month.to_be_budgeted %></td>
        <td><%= link_to 'Show', month %></td>
        <td><%= link_to 'Edit', edit_month_path(month) %></td>
        <td><%= link_to 'Destroy', month, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

