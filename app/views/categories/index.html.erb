<h1>Categories</h1>
<%= link_to 'New Category', new_category_path, class: 'btn btn-outline-primary' %>
<table class="table table-bordered table-sm">
  <thead>
    <tr>
      <th>Name</th>
      <th>Budgeted</th>
      <th>Activity</th>
      <th>Balance</th>
      <th>Group</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td class="text-right"><%= number_to_currency category.budgeted %></td>
        <td class="text-right"><%= number_to_currency category.activity %></td>
        <td class="text-right"><%= number_to_currency category.balance %></td>
        <td><%= category.group.name if category.group.present?  %></td>
        <td>
          <div class="btn-group btn-group-sm">
            <%= link_to 'Show', category, class: 'btn btn-outline-secondary' %>
            <%= link_to 'Edit', edit_category_path(category), class: 'btn btn-outline-secondary' %>
            <%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-danger' %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

